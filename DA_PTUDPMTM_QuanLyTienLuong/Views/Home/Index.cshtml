@model dynamic
@{
    ViewData["Title"] = "PayrollPro - Giải pháp tính lương thông minh cho giảng viên đại học";
}

<section id="hero" class="bg-primary text-white py-5 py-md-6">
    <div class="container d-flex flex-column flex-md-row align-items-center">
        <div class="me-md-5 mb-4 mb-md-0">
            <h1 class="display-4 fw-bold mb-3">Giải pháp tính lương thông minh cho giảng viên đại học</h1>
            <p class="lead mb-5">Dễ dàng quản lý, tính lương chính xác và bảo mật cao – Phần mềm được tối ưu hóa cho các trường đại học</p>
            <a href="#" class="btn btn-light text-primary fw-bold">Dùng thử miễn phí</a>
        </div>
    </div>
</section>

<section id="features" class="py-5 py-md-6">
    <div class="container">
        <h2 class="h1 text-center mb-4 mb-md-5">Các tính năng nổi bật của phần mềm</h2>
        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='mb-3 text-primary'><path d='M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2'></path><circle cx='9' cy='7' r='4'></circle><path d='M23 21v-2a4 4 0 0 0-3-3.87'></path><path d='M16 3.13a4 4 0 0 1 0 7.75'></path></svg>")
                <h3 class="h4 fw-bold mb-2">Quản lý thông tin giảng viên</h3>
                <p>Nhập liệu, chỉnh sửa thông tin giảng viên và các thông tin về hệ số lương, chức vụ.</p>
            </div>
            <div class="col-md-4 text-center mb-4 mb-md-0">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='mb-3 text-primary'><rect x='4' y='4' width='16' height='16' rx='2' ry='2'></rect><line x1='4' y1='10' x2='20' y2='10'></line><line x1='10' y1='4' x2='10' y2='20'></line></svg>")
                <h3 class="h4 fw-bold mb-2">Tính lương tự động</h3>
                <p>Tự động tính toán lương theo thời gian làm việc, giờ dạy thêm, thâm niên.</p>
            </div>
            <div class="col-md-4 text-center">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='64' height='64' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='mb-3 text-primary'><path d='M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z'></path></svg>")
                <h3 class="h4 fw-bold mb-2">Phân quyền người dùng</h3>
                <p>Phân quyền truy cập, cho phép chỉ người có quyền mới có thể chỉnh sửa thông tin lương.</p>
            </div>
        </div>
    </div>
</section>

<section id="benefits" class="bg-light py-5 py-md-6">
    <div class="container">
        <h2 class="h1 text-center mb-4 mb-md-5">Lợi ích khi sử dụng phần mềm tính lương</h2>
        <div class="row">
            <div class="col-md-6 d-flex align-items-start mb-4 mb-md-0">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='me-3 text-primary'><circle cx='12' cy='12' r='10'></circle><polyline points='12 6 12 12 16 14'></polyline></svg>")
                <div>
                    <h3 class="h4 fw-bold mb-2">Tiết kiệm thời gian</h3>
                    <p>Giảm thiểu thời gian cho bộ phận nhân sự trong việc tính toán và quản lý lương.</p>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-start mb-4 mb-md-0">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='me-3 text-primary'><path d='M22 11.08V12a10 10 0 1 1-5.93-9.14'></path><polyline points='22 4 12 14.01 9 11.01'></polyline></svg>")
                <div>
                    <h3 class="h4 fw-bold mb-2">Đảm bảo tính toán chính xác</h3>
                    <p>Loại bỏ sai sót trong quá trình tính lương, đảm bảo tính công bằng và minh bạch.</p>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-start mb-4 mb-md-0">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='me-3 text-primary'><polyline points='22 12 18 12 15 21 9 3 6 12 2 12'></polyline></svg>")
                <div>
                    <h3 class="h4 fw-bold mb-2">Quản lý dễ dàng</h3>
                    <p>Dễ dàng quản lý hồ sơ giảng viên và lịch sử lương với giao diện trực quan.</p>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-start">
                @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round' class='me-3 text-primary'><rect x='3' y='11' width='18' height='11' rx='2' ry='2'></rect><path d='M7 11V7a5 5 0 0 1 10 0v4'></path></svg>")
                <div>
                    <h3 class="h4 fw-bold mb-2">Bảo mật thông tin</h3>
                    <p>Đảm bảo an toàn và bảo mật cho thông tin lương của giảng viên.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="pricing" class="py-5 py-md-6">
    <div class="container">
        <h2 class="h1 text-center mb-4 mb-md-5">Bảng giá</h2>
        <div class="row">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="card text-center shadow">
                    <div class="card-body">
                        <h3 class="h4 fw-bold mb-3">Gói Cơ Bản</h3>
                        <p class="text-muted mb-4">Phù hợp cho các trường đại học nhỏ</p>
                        <p class="display-4 fw-bold mb-4">5,000,000 VNĐ/năm</p>
                        <a href="#" class="btn btn-primary fw-bold">Đăng ký gói</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="card text-center shadow-lg transform-scale-105">
                    <div class="card-body">
                        <h3 class="h4 fw-bold mb-3">Gói Nâng Cao</h3>
                        <p class="mb-4">Lựa chọn tốt nhất cho đa số trường đại học</p>
                        <p class="display-4 fw-bold mb-4">10,000,000 VNĐ/năm</p>
                        <a href="#" class="btn btn-primary fw-bold">Đăng ký gói</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center shadow">
                    <div class="card-body">
                        <h3 class="h4 fw-bold mb-3">Gói Doanh Nghiệp</h3>
                        <p class="text-muted mb-4">Dành cho các trường đại học lớn với nhu cầu đặc biệt</p>
                        <p class="display-4 fw-bold mb-4">Liên hệ</p>
                        <a href="#" class="btn btn-primary fw-bold">Liên hệ tư vấn</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="bg-light py-5 py-md-6">
    <div class="container">
        <h2 class="h1 text-center mb-4 mb-md-5">Liên hệ</h2>
        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">
                <form class="space-y-4">
                    <div class="mb-3">
                        <input type="text" placeholder="Họ tên" class="form-control rounded-0" required />
                    </div>
                    <div class="mb-3">
                        <input type="email" placeholder="Email" class="form-control rounded-0" required />
                    </div>
                    <div class="mb-3">
                        <input type="tel" placeholder="Số điện thoại" class="form-control rounded-0" />
                    </div>
                    <div class="mb-3">
                        <textarea placeholder="Tin nhắn" class="form-control rounded-0" rows="4" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary fw-bold">Gửi</button>
                </form>
            </div>
            <div class="col-md-6">
                <h3 class="h4 fw-bold mb-3">Thông tin liên hệ</h3>
                <p class="mb-2">Địa chỉ: 123 Đường ABC, Quận XYZ, TP. Hồ Chí Minh</p>
                <p class="mb-2">Email: support@payrollpro.com</p>
                <p class="mb-4">Điện thoại: 028 1234 5678</p>
                <div class="d-flex">
                    <a href="#" class="text-primary hover-text-primary-dark me-3">
                        @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z'></path></svg>")
                    </a>
                    <a href="#" class="text-primary hover-text-primary-dark">
                        @Html.Raw("<svg xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'><path d='M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z'></path><rect x='2' y='9' width='4' height='12'></rect><circle cx='4' cy='4' r='2'></circle></svg>")
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>