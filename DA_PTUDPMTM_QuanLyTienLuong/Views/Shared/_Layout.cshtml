<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayrollPro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <img src="~/Asset/Images/logohuit.jpg"style="width:50px;height:50px" alt="Logo" class="me-2" />
                <span class="h4 fw-bold mb-0">PayrollPro</span>
            </div>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a href="#features" class="nav-link text-white-50 hover-text-white">Tính năng</a></li>
                    <li class="nav-item"><a href="#benefits" class="nav-link text-white-50 hover-text-white">Lợi ích</a></li>
                    <li class="nav-item"><a href="#pricing" class="nav-link text-white-50 hover-text-white">Giá cả</a></li>
                    <li class="nav-item"><a href="#contact" class="nav-link text-white-50 hover-text-white">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="mb-3 mb-md-0">
                <img src="~/Asset/Images/logohuit.jpg"style="width:50px;height:50px" alt="Logo" class="d-inline-block me-2" />
                <span class="h5 fw-bold">PayrollPro</span>
            </div>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a href="#" class="nav-link text-white-50 hover-text-white">Chính sách bảo mật</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white-50 hover-text-white">Điều khoản sử dụng</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white-50 hover-text-white">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
        <div class="mt-3 text-center">
            <p class="mb-0">&copy; 2024 PayrollPro. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
</body>
</html>